{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "outDir": "../dist",
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "lib": ["es6", "dom"]
  },
  "include": ["../src/**/*"],
  "exclude": ["node_modules", "../src/client/**/*"]
}
