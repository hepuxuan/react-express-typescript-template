{
  "compilerOptions": {
    "outDir": "./public/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "lib": ["es6", "dom"]
  },
  "include": ["../src/**/*"],
  "exclude": ["node_modules", "../src/server/**/*"]
}
